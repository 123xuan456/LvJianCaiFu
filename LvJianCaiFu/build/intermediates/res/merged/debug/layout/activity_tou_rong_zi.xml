<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tourongzibeijing"
    tools:context="com.ryan.slidefragment.tourongzi.TouRongZiActivity" >

    <include
        android:id="@+id/register_detail"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        layout="@layout/login_title" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_detail"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:background="#e6a183"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/zhaozijin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/selector_zhaozijin"
                android:paddingTop="25dp"
                android:text="找资金"
                android:textColor="@color/tourongzi_text" />
			<LinearLayout 
			      android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            

            <Button
                android:id="@+id/zhaoxiangmu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/selector_zhaoxiangmu"
                android:paddingTop="20dp"
                android:text="找项目"
                android:textColor="@color/tourongzi_text"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffffff" />

        <LinearLayout
            android:id="@+id/j1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/jurenmai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/selector_jurenmai"
                android:paddingTop="10dp"
                android:text="  聚人脉  "
                android:textColor="@color/tourongzi_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffffff" />

        <LinearLayout
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp" >

            <Button
                android:id="@+id/pingtaifuwu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/selector_pingtai"
                android:paddingTop="10dp"
                android:text="  平台服务"
                android:textColor="@color/tourongzi_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/chenggonganli"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/selector_chenggonganli"
                android:paddingTop="25dp"
                android:text="成功案例"
                android:textColor="@color/tourongzi_text" />
	<LinearLayout 
			      android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            
            <Button
                
                android:id="@+id/qiyezhongxin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/selector_qiyefuwu"
                android:paddingTop="20dp"
                android:text="企业中心"
                android:textColor="@color/tourongzi_text" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>