<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ryan.slidefragment.fragment.HomeFragment">

    <RelativeLayout
        android:id="@+id/rl_title_my"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#3399cc" >

        <ImageView
            android:id="@+id/iv_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:onClick="showLeftMenu"
            android:src="@drawable/img_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="绿建中心"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:src="@drawable/laba1" />

        <TextView
            android:id="@+id/zhongyaoxinwen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="最新平台新闻！最新平台新闻！最新平台新闻！最新平台新闻！最新平台新闻！最新平台新闻！最新平台新闻！"
            android:textColor="#646464"
            android:textSize="15sp" >
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:background="#D2C4A0" />

    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:image_scale_type="fit_xy"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:orientation="vertical" >
        
        <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#ffff" />
        
         <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/JiShuZhanShi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp" >
<!-- android:background="@drawable/biankuang" -->
                <ImageView
                    android:id="@+id/iv_jishuzhenshe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jishu" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_chjiashu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="技术展示"
                        android:textColor="#323232"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_jishu_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Technology"
                        android:textColor="#646464"
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/tv_jishu_cheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Preview"
                        android:textColor="#646464"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#e1e1e1" />
            <LinearLayout
                android:id="@+id/QuanBuChanPin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp" >
<!-- android:background="@drawable/biankuang" -->
                <ImageView
                    android:id="@+id/iv_quanbuchanpin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cy_zhinengdianqi_1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_quanbuchanpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部产品"
                        android:textColor="#323232"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_allthe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Products"
                        android:textColor="#646464"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#646464"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
		
		<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/HangYeZiXun"
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <ImageView
                        android:id="@+id/iv_hangyezunxun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hyzx" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_hangyezixun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="行业资讯"
                            android:textColor="#323232"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_industry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Industry"
                            android:textColor="#646464"
                            android:textSize="10sp" />
                        
                        <TextView
                            android:id="@+id/tv_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Information"
                            android:textColor="#646464"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
        <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#e1e1e1" />
                <LinearLayout
                    android:id="@+id/TongZhiGongGao"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                     android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <ImageView
                        android:id="@+id/iv_tongzhigonggao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cy_nuantongkongtiao_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_tongzhigonggao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="通知公告"
                            android:textColor="#323232"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_announce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Announce"
                            android:textColor="#646464"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/tv_ments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ments"
                            android:textColor="#646464"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
        <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#e1e1e1" />
                <LinearLayout
                    android:id="@+id/ChengGongAnLi"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                     android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <ImageView
                        android:id="@+id/iv_chenggonganli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cy_kezaisheng_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_chenggonganli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成功案例"
                            android:textColor="#323232"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_Successfulcases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Successful"
                            android:textColor="#646464"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/tv_cases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cases"
                            android:textColor="#646464"
                            android:textSize="10sp" />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
<View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#fff" />
<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />
        <RelativeLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lianmengxiwen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lianmingxinwen1"
                android:gravity="center"
                android:padding="5dp"
                android:text="联盟新闻"
                android:textColor="#fff"
                android:textSize="13sp" />

            <!-- android:gravity="center" -->

            <TextView
                android:id="@+id/gengduoxinwen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/lianmengxiwen"
                android:layout_marginRight="15dp"
                android:text="查看更多>>"
                android:textColor="#BEBEBE"
                android:textSize="12sp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/LianMengXinWenListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="4dp" >
        </ListView>
    </LinearLayout>

</LinearLayout>