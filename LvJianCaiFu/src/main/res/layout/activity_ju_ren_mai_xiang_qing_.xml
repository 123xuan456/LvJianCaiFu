<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryan.slidefragment.tourongzi.activity.jurenmai.JuRenMaiXiangQing_Activity">
    <include
        android:id="@+id/register_detail"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        layout="@layout/login_title" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/xiangmubeijing"
        android:layout_below="@+id/register_detail"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView8"
            android:layout_alignParentTop="true"
            android:src="@drawable/peixun"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张女士"
            android:id="@+id/xingbie"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_toEndOf="@+id/imageView8"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经理"
            android:id="@+id/textView11"
            android:paddingLeft="5dp"
            android:layout_alignBottom="@+id/xingbie"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_toEndOf="@+id/imageView8"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区：   "
            android:id="@+id/textView13"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_toEndOf="@+id/imageView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市大苏打绿"
            android:id="@+id/textView15"
            android:layout_alignTop="@+id/textView13"
            android:layout_toRightOf="@+id/textView13"
            android:layout_toEndOf="@+id/textView13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主营行业："
            android:id="@+id/textView16"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_toEndOf="@+id/imageView8" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金融行业"
            android:id="@+id/textView17"
            android:paddingLeft="5dp"
            android:layout_alignTop="@+id/textView16"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/biankuang_xianxing"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约谈项目方"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView19" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/textView18"
                android:background="@drawable/yuandian"
                android:text="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/textView19"
                android:layout_toRightOf="@+id/textView19"
                android:layout_toEndOf="@+id/textView19" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang_xianxing"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收到投递"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView1" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/textView2"
                android:background="@drawable/yuandian"
                android:text="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:layout_toEndOf="@+id/textView1" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/biankuang_xianxing"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收到留言"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/tex" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/textV"
                android:background="@drawable/yuandian"
                android:text="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/tex"
                android:layout_toRightOf="@+id/tex"
                android:layout_toEndOf="@+id/tex" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/biankuang_xianxing"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商友"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/text" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/textView21"
                android:background="@drawable/yuandian"
                android:text="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/text"
                android:layout_toRightOf="@+id/text"
                android:layout_toEndOf="@+id/text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang_xianxing"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已发名片"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/textView4"
                android:background="@drawable/yuandian"
                android:text="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/biankuang_xianxing"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收到名片"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/textView6"
                android:background="@drawable/yuandian"
                android:text="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
