<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryan.slidefragment.tourongzi.activity.zhaozijin.ZhaozijinActivity" >

    <include
        android:id="@+id/register_detail"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        layout="@layout/login_title" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_detail"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/huise"
            android:text="股权投资" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/baise"
            android:text="债券投资" />
    </LinearLayout>

    <com.ryan.slidefragment.tourongzi.activity.zhaozijin.CustomViewPager
        android:id="@+id/vp01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout1" >
       
   </com.ryan.slidefragment.tourongzi.activity.zhaozijin.CustomViewPager>

  
</RelativeLayout>